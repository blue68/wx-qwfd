.flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.no-login {
  font-size: 36rpx;
  color: #262626;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.btn-login {
  width: 80%;
}
.meto {
  color: #FFF;
  font-size: 36rpx;
  text-align: center;
}
.me-container {
  width: 100%;
  height: 100%;
}
.userinfo {
  position: relative;
  width: 100%;
  height: 280rpx;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #1188ff;
}

.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 144rpx;
  height: 144rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.main-pannel {
  width: 100%;
  background: #F6F6F6;
}
.cont-box {
  padding: 60rpx 0rpx;
  border-top: 2rpx solid #FFF;
}
.cnt03 {
  padding: 40rpx;
  margin-bottom: 30rpx;
  background:#f8f8f8;
  border: 2rpx solid #f8f8f8;
  border-radius: 16rpx;
}

.list-item {
  margin-bottom: 40rpx;
  height: 120rpx;
  font-size: 36rpx;
  color: #616161;
  background: #FFF;
  justify-content: space-between;
}
.list-item image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.list-item .more {
  margin-right: 30rpx;
}
.list-item .more image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
}
.list-item .btn-dev {
  display: inline-block;
  border: 0px;
  background-color: transparent;
  text-align: left;
  padding-left: 0rpx;
  overflow: none;
  color: #616161;
}
.list-item .btn-dev:after {
  border: 0px;
}