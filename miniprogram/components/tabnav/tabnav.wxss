/* components/tabnav/tabnav.wxss */

.qwfd-wrapper {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  border: 0rpx;
  box-shadow: 3px 3px 2px rgba(0, 0, 0, 0.2);
}
.qwfd-wrapper .sv-box {
  height: 100%;
  display: flex;
  direction: row;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}
.qwfd-wrapper .sv-box .item {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx 0rpx;
  font-size: 34rpx;
  color: #FFF;
  text-align: center;
  transition: all 0.2s ease-in 0s;
}
.qwfd-wrapper .sv-box .item:active {
  background: rgba(0, 0, 0, 0.3);
}
.qwfd-wrapper .sv-box .sel:after {
  position: absolute;
  content: "";
  width: 100%;
  bottom: -4rpx;
  left: 0rpx;
  border-bottom: 4rpx solid #FFF;
} 